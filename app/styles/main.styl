@require "./_functions.styl"

* {
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -moz-osx-font-smooth grayscale
}

html, body {
  overflow: hidden
  background-color: #150931
  width: 100%
  height: 100%
  margin: 0
  padding: 0
}

body {
  font-family: "Any"
  font-size: 16px
  font-weight: 500
  color: #dedede
  overflow: auto
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
}