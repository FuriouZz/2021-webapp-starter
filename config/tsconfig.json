{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./",
    "outDir": "../tmp",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "exclude": [
    "modules"
  ],
  "include": [
    "workflow/**/*",
    "build.ts",
    "modules/stylus",
    "modules/asset-pipeline",
    "modules/asset-pipeline/submodules",
    "modules/file-generator",
    "modules/html",
    "modules/page",
    "modules/typescript",
    "modules/ejs",
    "modules/css"
  ]
}